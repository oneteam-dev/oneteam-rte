{
  "name": "oneteam-rte",
  "version": "0.0.1",
  "description": "Oneteam Rich text editor.",
  "repository": {
    "type": "git",
    "url": "git@github.com:oneteam-dev/oneteam-rte.git"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "webpack-dev-server --port 8008 --progress",
    "lint": "eslint src",
    "test": "mocha --compilers js:babel-register test/**/*.js",
    "clean": "if [ -d lib ]; then rm -rf lib; fi",
    "cp:draft-js-css": "cp node_modules/draft-js/dist/Draft.css lib/base.css",
    "build": "npm run clean && babel -d lib --presets es2015 src && npm run cp:draft-js-css"
  },
  "author": "Oneteam Inc.",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.3",
    "draft-js": "github:oneteam-dev/draft-js#v0.0.3-oneteam",
    "draft-js-export-html": "github:oneteam-dev/draft-js-export-html#v0.0.1-oneteam",
    "lodash": "^4.11.1",
    "react-bootstrap": "^0.29.0"
  },
  "peerDependencies": {
    "react": "~0.14.0 || ^15.0.1",
    "react-dom": "~0.14.0 || ^15.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.3",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "css-loader": "^0.23.1",
    "eslint": "^2.8.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-react": "^5.0.1",
    "jsdom": "^8.4.0",
    "mocha": "^2.4.5",
    "power-assert": "^1.3.1",
    "react": "^15.0.1",
    "react-addons-test-utils": "^15.0.1",
    "react-dom": "^15.0.1",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.2",
    "stylus-loader": "^2.0.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  }
}

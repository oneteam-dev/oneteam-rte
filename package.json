{
  "name": "oneteam-rte",
  "version": "0.3.2",
  "description": "Oneteam Rich text editor.",
  "repository": {
    "type": "git",
    "url": "git@github.com:oneteam-dev/oneteam-rte.git"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "webpack-dev-server --port 8008 --progress --host 0.0.0.0",
    "lint": "eslint src",
    "test-src": "mocha --compilers js:babel-register test/**/*.js",
    "test": "npm run lint && npm run test-src",
    "watch": "babel -w -d lib --presets es2015 src",
    "clean": "if [ -d lib ]; then rm -rf lib; fi",
    "cp:draft-js-css": "cp node_modules/draft-js/dist/Draft.css lib/base.css",
    "build": "npm run clean && babel -d lib --presets es2015 src && npm run cp:draft-js-css",
    "prepublish": "npm test && npm run build",
    "publish-if-tagged": "/bin/bash scripts/npm-publish.sh",
    "bump-patch-number": "(git branch | grep \\*\\ master > /dev/null) && npm version patch -m 'Version bump to %s' && git push --tags && git push origin master"
  },
  "author": "Oneteam Inc.",
  "contributors": [
    {
      "name": "Atsushi NAGASE",
      "email": "a@ngs.io",
      "url": "http://ngs.io/"
    },
    {
      "name": "Shingo Sato",
      "email": "shinsugar@gmail.com",
      "url": "https://sugarshin.net/"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "draft-js": "github:oneteam-dev/draft-js#v0.1.0-oneteam",
    "lodash": "^4.16.4",
    "oneteam-rte-converter": "github:oneteam-dev/oneteam-rte-converter#v1.0.2",
    "react-bootstrap": "^0.30.3",
    "url-regex": "^3.2.0"
  },
  "peerDependencies": {
    "react": "~0.14.0 || ^15.0.0",
    "react-dom": "~0.14.0 || ^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.7.2",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.3.0",
    "file-loader": "^0.9.0",
    "jsdom": "^8.4.0",
    "mocha": "^2.4.5",
    "power-assert": "^1.3.1",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.0.1",
    "react-dom": "^15.3.2",
    "react-fa": "^4.1.2",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1"
  }
}

{
  "name": "oneteam-rte",
  "version": "0.5.12",
  "description": "Oneteam Rich text editor.",
  "repository": {
    "type": "git",
    "url": "git@github.com:oneteam-dev/oneteam-rte.git"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "webpack-dev-server --progress",
    "lint": "eslint src",
    "test": "jest --config .jestrc",
    "watch": "babel -w -d lib src",
    "clean": "if [ -d lib ]; then rm -rf lib; fi",
    "css": "stylus --compress < src/Body.styl | cat node_modules/draft-js/dist/Draft.css - > lib/base.css",
    "build": "npm run clean && BABEL_ENV=production babel -d lib src && npm run css",
    "prepublish": "npm run lint && npm test && npm run build",
    "publish-if-tagged": "/bin/bash scripts/npm-publish.sh",
    "bump-patch-number": "(git branch | grep \\*\\ master > /dev/null) && npm version patch -m 'Version bump to %s' && git push --tags && git push origin master"
  },
  "author": "Oneteam Inc.",
  "contributors": [
    {
      "name": "Atsushi NAGASE",
      "email": "a@ngs.io",
      "url": "http://ngs.io/"
    },
    {
      "name": "Shingo Sato",
      "email": "shinsugar@gmail.com",
      "url": "https://sugarshin.net/"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "draft-js-checkable-list-item": "^2.0.2",
    "draft-js-plugins-editor": "^2.0.0-beta7",
    "immutable": "~3.7.4",
    "lodash": "^4.16.6",
    "oneteam-rte-constants": "github:oneteam-dev/oneteam-rte-constants#v1.0.0",
    "oneteam-rte-converter": "github:oneteam-dev/oneteam-rte-converter#v1.4.1",
    "react-bootstrap": "0.30.6",
    "url-regex": "^3.2.0"
  },
  "peerDependencies": {
    "react": "~0.14.0 || ^15.0.0",
    "react-dom": "~0.14.0 || ^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-jest": "^17.0.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.25.0",
    "enzyme": "^2.5.1",
    "eslint": "^3.9.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.6.0",
    "file-loader": "^0.9.0",
    "jest": "^17.0.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-fa": "^4.1.2",
    "react-hot-loader": "3.0.0-beta.6",
    "react-test-renderer": "^15.3.2",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  }
}
